<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="timingStyle">
        <!-- 字体和文本样式 -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/timingColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="timingBtnSize">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:radius">15dp</item>
        <item name="android:background">@color/backgroundTransparent</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="airIconText">
        <item name="android:textColor">@color/airTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="musicSeekBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/music_seekbar_bg</item>
        <item name="android:thumb">@drawable/volume_play</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="medicalStressTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/medicalTextColor</item>
    </style>

    <style name="differentialPressureTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/differentialPressureTextColor</item>
    </style>

    <style name="bottomText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/differentialPressureTextColor</item>
    </style>

    <style name="settingOptionsTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/timingColor</item>
    </style>

    <style name="btnStyle">
        <item name="android:background">@color/settingBg</item>
        <item name="android:textColor">@color/differentialPressureTextColor</item>
        <item name="android:radius">30dp</item>
    </style>

    <style name="InputBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/border_input_box</item>
        <item name="android:gravity">start</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="dialogInputStyle">
        <item name="android:layout_width">@dimen/short_edit_width</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@drawable/border_input_box</item>
        <item name="android:gravity">start</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stLength">LONG</item>
        LONG or SHORT
        <item name="stGravity">top</item>
        top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="settingTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:textColor">@color/settingOptionTextColor</item>
    </style>

    <style name="bottomTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/timingColor</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="addBtnStyle">
        <item name="android:background">@color/medicalTextColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">30dp</item>
    </style>
</resources>