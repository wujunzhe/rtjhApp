<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="timingStyle">
        <!-- 字体和文本样式 -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/timingColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="timingBtnSize">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:radius">15dp</item>
        <item name="android:background">@color/backgroundTransparent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="airIconText">
        <item name="android:textColor">@color/airTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="musicSeekBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/music_seekbar_bg</item>
        <item name="android:thumb">@drawable/volume_play</item>
        <item name="android:thumbOffset">0dp</item>
    </style>
    <style name="medicalStressTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/medicalTextColor</item>
    </style>
    <style name="differentialPressureTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/differentialPressureTextColor</item>
    </style>
    <style name="settingOptionsTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/timingColor</item>
    </style>
</resources>