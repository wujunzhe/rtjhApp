<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/display_settings_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_gravity="center"
    >
<LinearLayout
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:radius="16dp"
    android:gravity="center"
    android:elevation="4dp"
    android:paddingBottom="20dp">
    <!--值班-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:gravity="start|center_vertical">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/duty"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">
            <com.suke.widget.SwitchButton
                android:id="@+id/duty_display_switch"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

<!--    正负压切换-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        tools:ignore="UselessParent"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/negeToggle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">
        <com.suke.widget.SwitchButton
            android:id="@+id/nege_toggle_display_switch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>

    <!-- 压差表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        tools:ignore="UselessParent"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yacha"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">
        <com.suke.widget.SwitchButton
            android:id="@+id/yacha_display_switch"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spare1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">
            <com.suke.widget.SwitchButton
                android:id="@+id/spare1_display_switch"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spare2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">
            <com.suke.widget.SwitchButton
                android:id="@+id/spare2_display_switch"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spare3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">
            <com.suke.widget.SwitchButton
                android:id="@+id/spare3_display_switch"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spare4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">
            <com.suke.widget.SwitchButton
                android:id="@+id/spare4_display_switch"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/display_setting_save_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="@string/save"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="40dp"
        style="@style/btnStyle"/>
</LinearLayout>
</androidx.cardview.widget.CardView>